{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "api",
    "outDir": "dist",
    "sourceMap": true,
    "resolveJsonModule": true,
    "lib": ["es6", "dom"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["api"],
  "exclude": ["node_modules"]
}
